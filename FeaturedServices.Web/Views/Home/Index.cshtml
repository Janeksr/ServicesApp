@using ReflectionIT.Mvc.Paging
@model PagingList<CompanyExposeVM>
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Home";
}

<nav aria-label="Suppliers navigation example">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>


@foreach (var item in Model)
{
    <div class="row">
        <div class=col-6>
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        bool first = true;

                        foreach (var image in item.ImageCompanyExposeVMs)
                        {
                            if (first)
                            {
                                <div class="carousel-item active">
                                    <img src="~/image/@image.ImageName" class="d-block w-100" alt="@image.Title">
                                </div>
                                first = false;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="~/image/@image.ImageName" class="d-block w-100" alt="@image.Title">
                                </div>
                            }

                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
        <div class="col-6">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@*@item.Description*@</p>
                </div>
                <hr>
                <div class="card-body">
                    <p><span class="fw-bolder">Address: </span>@item.City, @item.StreetNameAndNumber</p>
                    @*<p><span class="fw-bolder">Contact: </span>@item.PhoneNumber</p>
                <p><span class="fw-bolder">Contact: </span>@item.PhoneNumber</p>
                <p><span class="fw-bolder">Category: </span>@item.CompanyType.Name</p>*@
                    <p><span class="fw-bolder">Open Hours: </span>@item.OpeningHours.ToShortTimeString() - @item.ClosingHours.ToShortTimeString()</p>
                </div>
            </div>
        </div>
    </div>
}

<nav aria-label="Suppliers navigation example">
    <vc:pager paging-list="@Model"></vc:pager>
</nav>
