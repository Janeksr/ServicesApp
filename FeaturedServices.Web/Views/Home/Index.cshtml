@using FeaturedServices.Data
@using ReflectionIT.Mvc.Paging
@model PagingList<Company>
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Home";
}

<nav aria-label="Suppliers navigation example">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>


@foreach (var item in Model)
{
    <div class="row border">
        <div class=col-6>
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/image/car1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/car2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/car3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
        <div class="col-6">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.City</li>
                    <li class="list-group-item">@item.StreetNameAndNumber, @item.ZipCode</li>
                    <li class="list-group-item">@item.PhoneNumber</li>
                    <li class="list-group-item">@item.CompanyType.Name</li>
                </ul>
                <div class="card-body">
                    <span>@item.OpeningHours.ToShortTimeString() - @item.ClosingHours.ToShortTimeString()</span>
                </div>
            </div>
        </div>
    </div>
}

<nav aria-label="Suppliers navigation example">
    <vc:pager paging-list="@Model"></vc:pager>
</nav>
