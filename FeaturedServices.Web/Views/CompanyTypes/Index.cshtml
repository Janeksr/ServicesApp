@model IEnumerable<CompanyTypeVM>

@{
    ViewData["Title"] = "Index";
}



<div class="row d-flex justify-content-center">
    <div class="col-8">
        <h1>Types of Companies</h1>
        <p>
            <a class="btn btn-success" asp-action="Create">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <button data-id="@item.Id" class="btn btn-danger deleteBtn ms-2" type="button"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="companyTypeId" name="Id" />
</form>

@section Scripts{
<script>
    $(function(){
        $('.table').DataTable({
           "columns": [
                    { "width": "70%" },
                    { "width": "23%" }
           ],
           "dom": 'lrtip'
        });

        $('.deleteBtn').click(function(e){
            swal({
                title: "Are you sure?",
                text: "Are you sure you want to delete this record?",
                icon: "warning",
                buttons: true,
                dangerMode: true
            }).then((confirm) => {
                if(confirm){
                    //alert('You Said Yes');
                    const btn = $(this);
                    const id = btn.data("id");
                    $('#companyTypeId').val(id);
                    $('#deleteForm').submit();
                }
            });
        });
    });
</script>
}