@model UserVM
@{
    ViewData["Title"] = "Find User";
}

<h1>Find User</h1>

<div class="card" style="width: 24rem;">
    <div class="card-header">
        User Details
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><span class="fw-bolder">Name:</span> @Model.Firstname @Model.Lastname</li>
        <li class="list-group-item"><span class="fw-bolder">Email:</span> @Model.Email</li>
        <li class="list-group-item"><span class="fw-bolder">Date Of Birth:</span> @Model?.DateOfBirth.ToShortDateString()</li>
        <li class="list-group-item">
            <span class="fw-bolder">Role:</span> @Model.Role
        </li>
    </ul>
</div>
<br />
<div class="col-md-4">
    <form asp-action="ChangeUserRole">
        <div class="form-group mb-3">
            <label asp-for="UserRole.NewRole" class="control-label"></label>
            <select asp-for="UserRole.NewRole" class="form-select" asp-items="Model.AllRoles">
            </select>
            <span asp-validation-for="NewRole" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="UserRole.Email" />
            <input type="submit" value="Change Role" class="btn btn-primary" />
            <a class="btn btn-dark ml-2" asp-action="Index">Back to Search</a>
        </div>
    </form>
</div>


