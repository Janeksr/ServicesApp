@model CompanyPanelVM


@if (Model.HaveImage == true)
{
    <form asp-controller="Image" asp-action="DeleteMainImage" class="mt-3">
        <button type="submit" class="btn btn-danger">
            Delete Main Image
        </button>
    </form>
    <p>You have uploaded your image.</p>
}
else
{
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Upload Main Image
    </button>
    <p>You did not upload your image.</p>
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Image" asp-action="AddImageCompany" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="imageCompanyVM.Title" class="control-label"></label>
                        <input asp-for="imageCompanyVM.Title" class="form-control" />
                        <span asp-validation-for="imageCompanyVM.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="imageCompanyVM.ImageFile" class="control-label"></label>
                        <input asp-for="imageCompanyVM.ImageFile" accept="image/*" />
                        <span asp-validation-for="imageCompanyVM.ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
